<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:background="@drawable/slide"
                android:layout_width="160dp"
                android:layout_height="160dp">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/add_image_shu_one"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
            </FrameLayout>
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"/>
            <FrameLayout
                android:background="@drawable/slide"
                android:layout_width="160dp"
                android:layout_height="160dp">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/add_image_shu_two"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
            </FrameLayout>
        </LinearLayout>
        <EditText
            android:id="@+id/ed_shu_leibie"
            android:background="@null"
            android:textSize="26dp"
            android:hint="Please input food category"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="#BDB5B5"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <EditText
            android:id="@+id/ed_shu_title"
            android:background="@null"
            android:textSize="26dp"
            android:hint="Please input food name"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="#BDB5B5"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <EditText
            android:gravity="start"
            android:maxLines="6"
            android:id="@+id/ed_shu_content"
            android:background="@null"
            android:textSize="18dp"
            android:hint="Please input food introduction"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="280dp"/>
        <View
            android:background="#BDB5B5"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:textSize="26dp"
                android:text="Price:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:id="@+id/seekbar"
                android:layout_gravity="center"
                android:layout_width="280dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="10"
                android:layout_gravity="center"
                android:id="@+id/tv_grade"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="#BDB5B5"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_time"
            android:gravity="right|center"
            android:textSize="20dp"
            android:text="Time"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/bt_add_food"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@drawable/listviewbg"
        android:text="Add food">

    </Button>
</RelativeLayout>